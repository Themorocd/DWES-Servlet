<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>controlador</servlet-name>
        <servlet-class>controlador.controlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NuevaVenta</servlet-name>
        <servlet-class>controlador.NuevaVenta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NuevoProducto</servlet-name>
        <servlet-class>controlador.NuevoProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificoProducto</servlet-name>
        <servlet-class>controlador.ModificoProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AltaComercial</servlet-name>
        <servlet-class>controlador.AltaComercial</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controlador</servlet-name>
        <url-pattern>/controlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NuevaVenta</servlet-name>
        <url-pattern>/NuevaVenta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NuevoProducto</servlet-name>
        <url-pattern>/NuevoProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificoProducto</servlet-name>
        <url-pattern>/ModificoProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AltaComercial</servlet-name>
        <url-pattern>/AltaComercial</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
